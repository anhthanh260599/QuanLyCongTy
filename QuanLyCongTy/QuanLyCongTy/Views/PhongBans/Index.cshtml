@model IEnumerable<QuanLyCongTy.Models.PhongBan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách phòng ban</h2>

<p>
    @Html.ActionLink("Thêm phòng ban", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mã phòng ban
            </th>
            <th>
                Tên phòng ban
            </th>
            <th>
                Chức năng
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDPhongBan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamePhongBan)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDPhongBan }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IDPhongBan }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDPhongBan })
                </td>
            </tr>
        }
    </tbody>
</table>
