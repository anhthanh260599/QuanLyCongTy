@model QuanLyCongTy.Models.PhongBan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Phòng ban</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*@Html.HiddenFor(model => model.IDPhongBan)*@

    <div class="form-group">
        <label> Mã phòng ban  </label>        
        <div class="col-md-10">
            @Html.EditorFor(model => model.IDPhongBan, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.IDPhongBan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label> Tên phòng ban  </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NamePhongBan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NamePhongBan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
