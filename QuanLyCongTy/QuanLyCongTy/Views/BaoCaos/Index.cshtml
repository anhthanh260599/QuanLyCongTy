@model IEnumerable<QuanLyCongTy.Models.BaoCao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách báo cáo</h2>

<p>
    @Html.ActionLink("Thêm báo cáo", "Create")
</p>
<table class="table">
    <thead>

        <tr>
            <th>
                Tiêu đề
            </th>
            <th>
                Nội dung
            </th>
            <th>
                Tên Nhân viên
            </th>
            <th>
                Chức năng
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TieuDe)
                </td>
                <td>
                    @Html.Raw(item.NoiDung)

                    @*@Html.DisplayFor(modelItem => item.NoiDung)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhanVien.TenNV)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id.Trim() }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Id.Trim() }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id.Trim() })
                </td>
            </tr>
        }
    </tbody>



</table>
